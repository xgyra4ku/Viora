cmake_minimum_required(VERSION 3.10)
project(Viora)

set(CMAKE_CXX_STANDARD 17)


# Добавляем основной исходный файл для сервера
add_executable(Server main.cpp
        src/Server.cpp
        inc/Server.h
        inc/structures.h
        src/Info.cpp
)

# Линкуем библиотеки
target_link_libraries(Server ws2_32 )
